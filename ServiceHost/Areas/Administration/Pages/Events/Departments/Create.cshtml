@page
@model ServiceHost.Areas.Administration.Pages.Events.Departments.CreateModel
@{
    ViewData["Title"] = "ایجاد طرف حساب جدید";
}


<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">ایجاد طرف حساب جدید</h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Name" class="form-label">نام*</label>
                                <input type="text" class="form-control" asp-for="Command.Name">
                                <span asp-validation-for="Command.Name" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Logo" class="form-label">لوگو*</label>
                                <input type="file" accept="image/*" class="form-control" asp-for="Command.Logo">
                                <span asp-validation-for="Command.Logo" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.NationalCode" class="form-label">کد ملی*</label>
                                <input type="text" class="form-control" asp-for="Command.NationalCode">
                                <span asp-validation-for="Command.NationalCode" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.PostalCode" class="form-label">کد پستی*</label>
                                <input type="text" class="form-control" asp-for="Command.PostalCode">
                                <span asp-validation-for="Command.PostalCode" class="error"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.Address" class="form-label">آدرس*</label>
                                <textarea class="form-control" asp-for="Command.Address" rows="4"></textarea>
                                <span asp-validation-for="Command.Address" class="error"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.Description" class="form-label">توضیحات</label>
                                <textarea class="form-control" id="BodyContent" asp-for="Command.Description" rows="4"></textarea>
                                <span asp-validation-for="Command.Description" class="error"></span>
                            </div>
                        </div>
                    </div>

                    
                    <button type="submit" class="btn btn-success">ایجاد</button>
                    <a class="btn btn-primary" asp-page="./Index">بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Script
    {
    <script src="https://cdn.tiny.cloud/1/03bywyfc22f080o11wndvso5su892zkphj49li728tkw9f3f/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#BodyContent',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
        });
    </script>
}
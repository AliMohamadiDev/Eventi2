@page "{id:long}"
@model ServiceHost.Areas.Administration.Pages.Events.EventSubcategories.EditModel
@{
    ViewData["Title"] = "ویرایش زیرموضوع" + @Model.Command.SubcategoryName;
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">ویرایش زیرموضوع: @Model.Command.SubcategoryName</h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.SubcategoryName" class="form-label">نام</label>
                                <input type="text" class="form-control" asp-for="Command.SubcategoryName">
                                <span asp-validation-for="Command.SubcategoryName" class="error"></span>
                            </div>
                        </div>
                        @*<div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Slug" class="form-label">اسلاگ</label>
                                <input type="text" class="form-control" asp-for="Command.Slug">
                                <span asp-validation-for="Command.Slug" class="error"></span>
                            </div>
                        </div>*@
                    </div>
                    <div class="row mb-4">
                        <div class="mb-4 col-md-6">
                            <select class="form-select" asp-for="Command.CategoryId" asp-items="Model.EventCategories">
                                <option value="0">موضوع اصلی...</option>
                            </select>
                        </div>
                        <span asp-validation-for="Command.CategoryId" class="error"></span>
                    </div>

                    <input type="hidden" asp-for="Command.SubcategoryId" value="@Model.Command.SubcategoryId" />
                    <button type="submit" class="btn btn-success">ویرایش</button>
                    <a class="btn btn-primary" asp-page="./Index">بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</div>


@page "{id:long}"
@model ServiceHost.Areas.Administration.Pages.Events.DiscountCodes.EditModel
@{
    ViewData["Title"] = "ویرایش کد تخفیف" + @Model.Command.Code;
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">ایجاد کد تخفیف جدید</h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Code" class="form-label">کد*</label>
                                <input type="text" class="form-control" asp-for="Command.Code">
                                <span asp-validation-for="Command.Code" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.DiscountRate" class="form-label">درصد تخفیف*</label>
                                <input type="text" class="form-control" asp-for="Command.DiscountRate">
                                <span asp-validation-for="Command.DiscountRate" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Count" class="form-label">تعداد*</label>
                                <input type="text" class="form-control" asp-for="Command.Count">
                                <span asp-validation-for="Command.Count" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.TicketId" class="form-label">بلیط*</label>
                                <select class="form-select" asp-for="Command.TicketId" asp-items="Model.Tickets">
                                    <option value="0">بلیط...</option>
                                </select>
                                <span asp-validation-for="Command.TicketId" class="error"></span>
                            </div>
                        </div>
                    </div>
                    
                    <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id"/>
                    <button type="submit" class="btn btn-success">ایجاد</button>
                    <a class="btn btn-primary" asp-page="./Index">بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</div>
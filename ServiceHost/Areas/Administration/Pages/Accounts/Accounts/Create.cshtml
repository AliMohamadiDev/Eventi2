@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Accounts.CreateModel
@{
    ViewData["Title"] = "ایجاد کاربر جدید";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">ایجاد کاربر جدید</h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.Fullname">نام</label>
                                <input type="text" asp-for="Command.Fullname" class="form-control"/>
                                <span asp-validation-for="Command.Fullname" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.FatherName">نام پدر</label>
                                <input type="text" asp-for="Command.FatherName" class="form-control"/>
                                <span asp-validation-for="Command.FatherName" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.Email">ایمیل</label>
                                <input type="text" asp-for="Command.Email" class="form-control"/>
                                <span asp-validation-for="Command.Email" class="error"></span>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.Mobile">موبایل</label>
                                <input type="text" asp-for="Command.Mobile" class="form-control"/>
                                <span asp-validation-for="Command.Mobile" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.NationalCode">کدملی</label>
                                <input type="text" asp-for="Command.NationalCode" class="form-control"/>
                                <span asp-validation-for="Command.NationalCode" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.ProfilePhoto">عکس پروفایل</label>
                                <input type="file" asp-for="Command.ProfilePhoto" class="form-control" accept="image/*"/>
                                <span asp-validation-for="Command.ProfilePhoto" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.Birthday">تاریخ تولد</label>
                                <input asp-for="Command.Birthday" class="form-control persianDateInput"/>
                                <span asp-validation-for="Command.Birthday" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.State">استان</label>
                                <input type="text" asp-for="Command.State" class="form-control"/>
                                <span asp-validation-for="Command.State" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.City">شهر</label>
                                <input type="text" asp-for="Command.City" class="form-control"/>
                                <span asp-validation-for="Command.City" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.PostalCode">کد پستی</label>
                                <input type="text" asp-for="Command.PostalCode" class="form-control"/>
                                <span asp-validation-for="Command.PostalCode" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.Gender">جنسیت</label>
                                <select asp-for="Command.Gender" class="form-select">
                                    @*<option value="@Model.Command.Gender">@(Model.Command.Gender ? "مرد" : "زن")</option>*@
                                    <option value="true">مرد</option>
                                    <option value="false">زن</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.EducationalCenter">مرکز آموزشی</label>
                                <input type="text" asp-for="Command.EducationalCenter" class="form-control"/>
                                <span asp-validation-for="Command.EducationalCenter" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.ScientificField">رشته علمی</label>
                                <input type="text" asp-for="Command.ScientificField" class="form-control"/>
                                <span asp-validation-for="Command.ScientificField" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.UniversityDegree">مقطع دانشگاهی</label>
                                <input type="text" asp-for="Command.UniversityDegree" class="form-control"/>
                                <span asp-validation-for="Command.UniversityDegree" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.SeminaryDegree">مقطع حوزوی</label>
                                <input type="text" asp-for="Command.SeminaryDegree" class="form-control"/>
                                <span asp-validation-for="Command.SeminaryDegree" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.RoleId" class="form-label">نقش ها</label>
                                <select class="form-select" asp-for="Command.RoleId" asp-items="Model.Roles">
                                    <option value="0">انتخاب نقش...</option>
                                </select>
                                <span asp-validation-for="Command.RoleId" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="form-group">
                                <label class="form-label" asp-for="Command.Address">آدرس</label>
                                <input type="text" asp-for="Command.Address" class="form-control"/>
                                <span asp-validation-for="Command.Address" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Password" class="form-label">رمز عبور</label>
                                <input type="password" class="form-control" asp-for="Command.Password">
                                <span asp-validation-for="Command.Password" class="error"></span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">ایجاد</button>
                    <a class="btn btn-primary" asp-page="./Index">بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</div>
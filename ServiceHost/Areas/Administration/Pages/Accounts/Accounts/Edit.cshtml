@model ServiceHost.Areas.Administration.Pages.Accounts.Accounts.EditModel
@{
    ViewData["Title"] = "ویرایش کاربر:" + @Model.Command.Fullname;
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">ویرایش کاربر: @Model.Command.Fullname</h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">

@page "{id}"
@model ServiceHost.Pages.ArticleCategoryModel
@{
    ViewData["Title"] = "مقالات";
}


<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">موضوعات /</span> @Model.ArticleCategory.Name
</h4>

<div class="row">
    <div class="col-xl-3 col-lg-4 col-md-4 mb-lg-0 mb-4">
        <h5>موضوعات</h5>
        <div class="nav-align-left">
            <ul class="nav nav-pills w-100 gap-3">
                
                @foreach (var category in Model.ArticleCategories)
                {
                    if (Model.ArticleCategory.Slug == category.Slug)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" asp-page="./ArticleCategory" asp-route-id="@category.Slug">
                                @category.Name 
                            </a>
                        </li>
                    }
                    else
                    {
                        <a class="nav-link" asp-page="./ArticleCategory" asp-route-id="@category.Slug">
                            @category.Name 
                        </a>
                    }
                }
                
            </ul>
        </div>
    </div>

    <div class="col-xl-9 col-lg-8 col-md-8">
        <div class="card overflow-hidden">
            <div class="card-body">
                <h4 class="d-flex align-items-center">
                    <span class="badge bg-label-secondary p-2 rounded  me-3">
                        <i class="bx bx-cube bx-sm"></i>
                    </span>
                    @Model.ArticleCategory.Name
                </h4>
                <ul class="list-unstyled my-4">
                    
                    @foreach (var article in Model.ArticleCategory.Articles)
                    {
                        <li class="mb-3">
                            <a asp-page="./Article" asp-route-id="@article.Slug" class="d-flex fw-semibold">
                                <i class="bx bx-chevron-right scaleX-n1-rtl text-muted me-1"></i>
                                @article.Title
                            </a>
                        </li>
                    }

                </ul>

                <a class="btn btn-label-primary" asp-page="./Faq">
                    <i class="bx bx-chevron-left scaleX-n1-rtl me-1"></i>
                    <span class="align-middle">بازگشت به پرسش های متداول</span>
                </a>
            </div>
        </div>
    </div>
</div>

@page "{id}"
@using _0_Framework.Application
@model ServiceHost.Pages.EventModel
@{
    ViewData["Title"] = "رویداد ها";
}


<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light"> رویدادها / @Model.Event.Subcategory / </span> @Model.Event.Name
</h4>
<div class="row">
    <div class="col-xl-8 col-lg-7 col-md-7 order-0 order-md-1">

        <div class="card mb-4">
            <div class="card-header">
                <div class="img-fluid text-center mb-4">
                    <img src="~/AdminTheme/assets/img/elements/11.jpg"/>
                </div>

                <h5 class="card-title mb-2">@Model.Event.Name</h5>
                <span class="card-subtitle">@(Model.Event.EventInfo != null ? Model.Event.EventInfo.Description : "" )</span>
            </div>
            <div class="card-header">بلیط ها</div>
            <div class="card-body">
                <div class="">
                    @foreach (var item in Model.Event.Tickets)
                    {
                        <div class="card shadow-none bg-transparent border border-primary mb-3">
                            <div class="row">

                                <div class="card-body col">
                                    <h5 class="card-title">@item.Title</h5>
                                    <p class="card-text">
                                        @item.StartTime.ToFarsi() - @item.EndTime.ToFarsi()
                                    </p>
                                    <p class="card-text">قیمت: @(item.IsFree ? "رایگان" : item.Price)</p>
                                    <p class="card-text">@item.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </div>

    </div>
    

    <div class="col-xl-4 col-lg-5 col-md-5 order-1 order-md-0">

        <div class="card mb-4">
            <div class="card-body">
                <div class="user-avatar-section">
                    <div class=" d-flex align-items-center flex-column">
                        <img class="img-fluid rounded my-4" src="~/AdminTheme/assets/img/elements/1.jpg" height="110" width="110" alt="@Model.Event.Presenter.LogoAlt" title="@Model.Event.Presenter.LogoTitle" />
                        <div class="user-info text-center">
                            <h4 class="mb-2">@Model.Event.Presenter.Name</h4>
                            <span class="badge bg-label-secondary">برگزارکننده</span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-around flex-wrap my-4 py-3">
                    <div class="d-flex align-items-start me-4 mt-3 gap-3">
                        <span class="badge bg-label-primary p-2 rounded"><i class='bx bx-check bx-sm'></i></span>
                        <div>
                            <h5 class="mb-0">@*@Model.Event.Presenter.Events.Count*@000</h5>
                            <span>تعداد رویداد ها</span>
                        </div>
                    </div>
                </div>
                <h5 class="pb-2 border-bottom mb-4">اطلاعات برگزارکننده</h5>
                <div class="info-container">
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <span class="fw-bold me-2">شماره تلفن:</span>
                            <span>@Model.Event.Presenter.Number</span>
                        </li>
                        <li class="mb-3">
                            <span class="fw-bold me-2">وبسایت:</span>
                            <span>@Model.Event.Presenter.Website</span>
                        </li>
                        <li class="mb-3">
                            <span class="fw-bold me-2">وضعیت:</span>
                            <span class="badge bg-label-success">فعال</span>
                        </li>
                    </ul>
                    <div class="d-flex justify-content-center pt-3">
                        <a asp-page="./Presenter" asp-route-id="@Model.Event.Presenter.Slug" class="btn btn-primary me-3">اطلاعات بیشتر</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

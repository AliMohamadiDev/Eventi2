@page "{id:long}"
@using _0_Framework.Application
@model ServiceHost.Pages.CheckoutModel
@{
    ViewData["Title"] = "صفحه پرداخت";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">صفحه پرداخت</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="/Index">صفحه اصلی</a>
                            </li>
                            <li class="active">پرداخت پرداخت</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <form method="post">
                            <div class="cart-table table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="pro-thumbnail">عنوان</th>
                                            <th class="pro-thumbnail">قیمت</th>
                                            <th class="pro-title">تعداد</th>
                                            <th class="pro-price">قیمت نهایی</th>
                                            <th class="pro-quantity">درصد تخفیف</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                            <tr>
                                                <td class="pro-title">
                                                    <a>@Model.Ticket.Title</a>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@Model.Ticket.Price.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-price">
                                                <span>@Model.Ticket.Number</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                <span>@Model.Ticket.TotalPrice.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                <span>@Model.Ticket.DiscountRate%</span>
                                                </td>
                                            </tr>
                                        

                                    </tbody>
                                </table>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 col-12 d-flex">
                                    <div class="cart-summary">
                                        <div class="cart-summary-button">
                                            <input type="hidden" asp-for="Ticket.Id" value="@Model.Ticket.Id" />
                                            <button class="checkout-btn" asp-page-handler="Pay">پرداخت</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
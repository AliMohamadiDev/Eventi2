@section Css
{
    <link rel="stylesheet" href="~/Theme/assets/vendor/css/pages/page-user-view.css"/>

    <link rel="stylesheet" href="~/Theme/assets/vendor/libs/formvalidation/dist/css/formValidation.min.css"/>

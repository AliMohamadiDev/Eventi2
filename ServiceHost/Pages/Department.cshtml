@page "{id}"
@model ServiceHost.Pages.DepartmentModel
@{
    ViewData["Title"] = Model.Department.Name;
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="user-profile-header-banner">
                <img src="~/theme/assets/img/pages/profile-banner.png" alt="Banner image" class="rounded-top">
            </div>
            <div class="user-profile-header d-flex flex-column flex-sm-row text-sm-start text-center mb-4">
                <div class="flex-shrink-0 mt-n2 mx-sm-0 mx-auto">
                    <img src="~/Pictures/@Model.Department.Logo" alt="@Model.Department.LogoAlt" title="@Model.Department.LogoTitle" class="d-block h-auto ms-0 ms-sm-4 rounded user-profile-img">
                </div>
                <div class="flex-grow-1 mt-3 mt-sm-5">
                    <div class="d-flex align-items-md-end align-items-sm-start align-items-center justify-content-md-between justify-content-start mx-4 flex-md-row flex-column gap-4">
                        <div class="user-profile-info">
                            <h4>@Model.Department.Name</h4>
                            <ul class="list-inline mb-0 d-flex align-items-center flex-wrap justify-content-sm-start justify-content-center gap-2">

                                <li class="list-inline-item fw-semibold">
                                    <i class='bx bx-arrow-back'></i> @Model.Department.Address
                                </li>
                                <li class="list-inline-item fw-semibold">
                                    <i class='bx bx-phone-call'></i> @Model.Department.PostalCode
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
        <div class="card mb-4">
            <div class="card-body">
                <small class="text-muted text-uppercase">درباره دپارتمان</small>
                <p>@Html.Raw(Model.Department.Description)</p>
            </div>
        </div>
    </div>
</div>

<h6 class="pb-1 mb-4 text-muted">رویداد ها</h6>
@if (Model.Department.Events.Count == 0)
{
    <div class="d-flex justify-content-center">
        <div class="alert alert-danger text-center">این دپارتمان هنوز رویدادی برگزار نکرده است!</div>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var item in Model.Department.Events)
        {
            @(await Html.PartialAsync("Partials/_EventCard", item))
        }
    </div>
}

@section Css{
    <link rel="stylesheet" href="~/theme/assets/vendor/libs/swiper/swiper.css"/>
    <link rel="stylesheet" href="~/theme/assets/vendor/css/pages/ui-carousel.css"/>

    <link rel="stylesheet" href="~/theme/assets/vendor/css/pages/page-profile.css"/>

}

@section Script
{
    <script src="~/theme/assets/vendor/libs/swiper/swiper.js"></script>
    <script src="~/theme/assets/js/ui-carousel.js"></script>

    <script src="~/theme/assets/js/pages-profile.js"></script>
}